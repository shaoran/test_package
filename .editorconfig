# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{css,js}]
indent_size = 4

[*.spec.yaml]
indent_size = 2

[Makefile]
indent_style = tab

[*.{diff,patch}]
trim_trailing_whitespace = false
